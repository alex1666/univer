<!DOCTYPE html>
<html>

<head>
  <title>Home</title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="modules/bootstrap/css/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="./css/style.css" />

  <script>
    let date = new Date();
    let hours = date.getHours();
    let minutes = date.getMinutes();
    let time;
    if (minutes < 10){
      time = hours + ":" + "0" + minutes;
    }
    else{
      time = hours + ":" + minutes;
    };
    window.onload = function(){
      document.getElementById("Time").innerHTML= time;
    }
    //document.getElementById("Time").innerHTML= 1;
</script>

</head>

<body>
  <div class="wrapper">
    <!-- ===== header start ===== -->
    <%- include('./blocks/header') %>
      <!-- ===== header end ===== -->

      <main>
        <div class="container">
          <div class="container">
            <h1>New post</h1>
            <form action="/newPost" method="POST">
              <div class="row mb-3">
                <div class="mb-3">
                  <label for="title" class="form-label">Title:</label>
                  <input name="title" type="text" class="form-control" id="title" placeholder="write ..." required>
                </div>
                <div class="mb-3">
                  <label for="Description" class="form-label">Description:</label>
                  <textarea name="info" type="text" class="form-control" id="Description" placeholder="write ..."
                    cols="30" rows="5"></textarea>
                </div>
                <div class="mb-3">
                  <label for="Time" class="form-label">Time:</label>
                  <textarea name="time" type="text" class="form-control" id="Time"
                    cols="30" rows="5">
                  </textarea>
                </div>
                <button class="btn btn-warning" type="submit">
                  Create post
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>

      <!-- ===== footer start ===== -->
      <%- include('./blocks/footer') %>
        <!-- ===== footer end ===== -->
  </div>
</body>

</html>